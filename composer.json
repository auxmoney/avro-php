{
    "name": "auxmoney/avro-php",
    "description": "Avro schema encoder/decoder",
    "type": "library",
    "license": "Apache-2.0",
    "autoload": {
        "psr-4": {
            "Auxmoney\\Avro\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Auxmoney\\Avro\\Tests\\": "tests/"
        }
    },
    "authors": [
        {
            "name": "Thiago Barcala",
            "email": "thiago.barcala@gmail.com"
        }
    ],
    "require": {
        "php-64bit": ">=8.2"
    },
    "require-dev": {
        "phpunit/phpunit": "^11",
        "phpstan/phpstan": "^2.1",
        "symplify/easy-coding-standard": "^12",
        "infection/infection": "^0.30.3"
    },
    "config": {
        "lock": false,
        "allow-plugins": {
            "infection/extension-installer": true
        }
    }
}
