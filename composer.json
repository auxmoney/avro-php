{
    "name": "auxmoney/avro-php",
    "description": "Avro schema encoder/decoder based on Apache implementation",
    "type": "library",
    "license": "Apache-2.0",
    "autoload": {
        "psr-4": {
            "Apache\\Avro\\": "apache/lib/",
            "Auxmoney\\Avro\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Apache\\Avro\\Tests\\": "apache/test/",
            "Auxmoney\\Avro\\Tests\\": "tests/"
        }
    },
    "authors": [
        {
            "name": "Thiago Barcala",
            "email": "thiago.barcala@gmail.com"
        }
    ],
    "require": {
        "php-64bit": ">=8.2"
    },
    "require-dev": {
        "phpunit/phpunit": "^11",
        "phpstan/phpstan": "^2.1",
        "symplify/easy-coding-standard": "^12"
    },
    "config": {
        "lock": false
    }
}
